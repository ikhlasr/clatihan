    }

    cout << "Bilangan Genap\t :";
    for  (int i=0; i<100; i++)  {
          if  (bil{i} * 2 == 0) {
            cout << bil [i] << " " ;
        }
    }
     cout << endl ;
     cout << "Bilangan Ganjil\t ;  ";
     for (int i=0; i<100; i++) {
        if (bil[i] * 2) {
            cout << bil[i] << " ";
     }
        }
                return 0 ;

}
